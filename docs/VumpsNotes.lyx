\begin_inset Formula 
\[
T_{A}=\sum_{n}A^{*n}\otimes A^{n}
\]

\end_inset


\begin_inset Formula 
\[
T_{A\left(i_{1}j_{1}i_{2}j_{2}\right)}=\sum_{n}A_{i_{2}i_{1}}^{*n}\otimes A_{j_{1}j_{2}}^{n}
\]

\end_inset

