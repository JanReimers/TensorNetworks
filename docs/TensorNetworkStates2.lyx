\]

\end_inset


\begin_inset Formula 
\[
R_{i_{2}^{B}w_{2}^{B}j_{2}^{B}}^{[2]}=\sum_{n_{2}^{B}m_{2}^{B}}\sum_{i_{1}^{B}w_{1}^{B}j_{1}^{B}}B_{i_{1}^{B},1}^{\dagger[2]m_{2}^{B}}W_{w_{1}^{B}w_{2}^{B}}^{m_{2}^{B}n_{2}^{B}}R_{i_{1}^{B}w_{1}^{B}j_{1}^{B}}^{[1]}B_{j_{1}^{B},1}^{[2]n_{2}^{B}}
\]

\end_inset

